[Unit]
Description={{ item.name }} (rclone)
AssertPathIsDirectory=/mnt/{{ item.provider }}
After=network-online.target

[Service]
Type=simple
User={{ user.username }}
ExecStart=/usr/bin/rclone mount \
        --config=/home/{{ user.username }}/.config/rclone/rclone.conf \
        --cache-tmp-upload-path=/tmp/rclone/upload \
        --cache-chunk-path=/tmp/rclone/chunks \
        --cache-workers=8 \
        --cache-writes \
        --cache-dir=/tmp/rclone/vfs \
        --cache-db-path=/tmp/rclone/db \
        --log-file=/home/{{ user.username }}/.config/rclone/{{ item.provider }}-log.txt \
        --no-modtime \
        --drive-use-trash \
        --stats=0 \
        --checkers=16 \
        --bwlimit=40M \
        --dir-cache-time=60m \
        --vfs-cache-mode full \
        --cache-info-age=60m {{ item.provider }}:/ /mnt/{{ item.provider }}
ExecStop=/bin/fusermount -u /mnt/{{ item.provider }}
Restart=always
RestartSec=10

[Install]
WantedBy=default.target