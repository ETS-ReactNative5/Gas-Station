# Load Starship
eval "$(starship init bash)"

# Aliases
alias provision-instapy='ansible-galaxy install -r requirements.yml && ansible-playbook --ask-vault-pass -i inventories/instapy.yml main.yml'
alias provision-maas='ansible-galaxy install -r requirements.yml && ansible-playbook --ask-vault-pass -i inventories/maas.yml main.yml'
alias provision-network='ansible-galaxy install -r requirements.yml && ansible-playbook --ask-vault-pass -i inventories/network.yml main.yml'
alias provision-nuc='ansible-galaxy install -r requirements.yml && ansible-playbook --ask-vault-pass -i inventories/nuc.yml main.yml'
alias provision-pihole='ansible-galaxy install -r requirements.yml && ansible-playbook --ask-vault-pass -i inventories/pihole.yml main.yml'
alias provision-workstation='ansible-galaxy install -r requirements.yml && ansible-playbook --ask-vault-pass -i inventories/workstation.yml main.yml'
alias provision-wsl='ansible-galaxy install -r requirements.yml && ansible-playbook --ask-vault-pass -i inventories/wsl.yml main.yml'
alias ports='netstat -tulanp'
alias vaultdirectory='find . -type f -printf "%h/\"%f\" " | xargs ansible-vault encrypt'